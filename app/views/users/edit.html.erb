<h1>Edit Profile</h1>

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <%= f.submit "Save", class: "btn btn-outline-primary" %>
  <%= link_to "Change Password", edit_user_password_path(@user), class: "btn btn-outline-primary" %>
<% end %>
