<h1>Sign in</h1>

<%= form_for :session, url: sessions_path do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <%= f.submit "Sign In", class: "btn btn-outline-primary" %>
<% end %>