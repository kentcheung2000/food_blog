<div class="container">

<%= form_for @outing do |f| %>
  <div >
    <%= f.label :outing_picture %>
    <%= f.file_field :outing_picture %>
  </div>

  <div >
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div >
    <%= f.label :meeting_date %>
    <%= f.date_field :meeting_date, data:{ provide:'datepicker' } %>
  </div>

  <div >
    <%= f.label :meeting_time %>
    <%= f.time_field :meeting_time, data:{ provide:'timepicker' } %>
  </div>

  <div >
    <%= f.label :total %>
    <%= f.number_field :total,  step: 0.01, class: "form-control" %>
  </div>

  <div >
    <%= f.label :restaurant %>
    <%= f.select :restaurant_id, options_for_select(Restaurant.all.map{|r|[r.name, r.id]}) %>
  </div>

  <%= f.submit %>

  <% end %>

  </div>